<?xml version="1.0" encoding="utf-8"?>

<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/table_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/caveplan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Cave Plan"
                android:src="@drawable/caveplan" />

            <com.cavemen.inception.ui.view.TableView
                android:id="@+id/Table"
                android:layout_width="90px"
                android:layout_height="150px"
                android:background="@drawable/table_bg_selector" />
        </FrameLayout>
    </ScrollView>

</HorizontalScrollView>